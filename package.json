{
    "private": true,
    "name": "expos",
    "description": "Aplikasi kasir",
    "version": "1.0.0",
    "author": "luthfi <luthficloud1290@gmail.com>",
    "main": "app/background.js",
    "scripts": {
        "dev": "nextron",
        "build": "nextron build",
        "build:win32": "nextron build --win --ia32",
        "build:win64": "nextron build --win --x64",
        "postinstall": "electron-builder install-app-deps",
        "dist": "nextron build --win --ia32 --x64"
    },
    "dependencies": {
        "@headlessui/react": "^1.7.8",
        "@heroicons/react": "^2.0.14",
        "@hookform/resolvers": "^2.9.10",
        "@reduxjs/toolkit": "^1.9.2",
        "@tailwindcss/forms": "^0.5.3",
        "axios": "^1.2.6",
        "electron-log": "^5.3.0",
        "electron-pos-printer": "^1.3.6",
        "electron-push-receiver": "^2.1.3",
        "electron-serve": "^1.1.0",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.3.9",
        "firebase": "^9.17.2",
        "js-cookie": "^3.0.1",
        "kioskboard": "^2.3.0",
        "react-currency-input-field": "^3.6.9",
        "react-datepicker": "^4.9.0",
        "react-hook-form": "^7.42.1",
        "react-query": "^3.39.3",
        "react-redux": "^8.0.5",
        "react-select": "^5.7.0",
        "react-shimmer": "^3.2.0",
        "react-simple-keyboard": "^3.5.20",
        "sound-play": "^1.1.0",
        "sweetalert2": "^11.7.1",
        "tailwind-merge": "^1.9.0",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.26",
        "autoprefixer": "^10.4.7",
        "electron": "^21.3.3",
        "electron-builder": "^23.6.0",
        "next": "^12.3.4",
        "nextron": "^8.5.0",
        "postcss": "^8.4.13",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.1.8",
        "typescript": "^4.9.4"
    },
    "repository": "https://github.com/rnbfinance21/expos-desktop.git",
    "build": {
        "appId": "com.expos.exposdesktop",
        "productName": "EXPOS",
        "directories": {
            "output": "dist"
        },
        "files": [
            "app/**/*",
            "main/**/*",
            "renderer/**/*",
            "package.json"
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "rnbfinance21",
                "repo": "expos-desktop",
                "private": true
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "ia32",
                        "x64"
                    ]
                }
            ],
            "artifactName": "EXPOS-V${version}.exe"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
